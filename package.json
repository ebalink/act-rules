{
  "name": "@qualweb/act-rules",
  "version": "0.4.49",
  "description": "ACT-R module for qualweb accessibility evaluator",
  "main": "dist/act.js",
  "scripts": {
    "tsc": "tsc",
    "test": "mocha --require esm test/rule.spec.js",
    "test:pre": "mocha --require esm test/rulePreProcessing.spec.js",
    "compile:rules": "node compile-rules.js",
    "prebuild": "npm run compile:rules && rimraf prebuild && tsc --build",
    "build": "npm run prebuild && rimraf dist && webpack --mode production && rimraf prebuild",
    "pub": "npm run build && npm publish"
  },
  "keywords": [
    "a11y",
    "act",
    "accessibility",
    "qualweb",
    "evaluator",
    "rule"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qualweb/act-rules.git"
  },
  "author": "Jo√£o Vicente",
  "license": "ISC",
  "devDependencies": {
    "@qualweb/dom": "^0.1.29",
    "@qualweb/qw-page": "^0.1.38",
    "@qualweb/types": "^0.4.53",
    "@tsconfig/recommended": "^1.0.1",
    "@types/lodash.clone": "^4.5.6",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/node": "^14.14.22",
    "@types/string-pixel-width": "^1.7.1",
    "chai": "^4.2.0",
    "css-select": "^3.1.2",
    "esm": "^3.2.25",
    "mocha": "^8.2.1",
    "node-fetch": "^2.6.1",
    "puppeteer": "^7.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "@qualweb/util": "^0.3.64",
    "languagedetect": "^2.0.0",
    "lodash.clone": "^4.5.0",
    "lodash.clonedeep": "^4.5.0",
    "rematrix": "^0.7.1",
    "string-pixel-width": "^1.10.0"
  }
}
