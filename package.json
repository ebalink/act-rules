{
  "name": "@qualweb/act-rules",
  "version": "0.5.2",
  "description": "ACT rules module for qualweb web accessibility evaluator",
  "main": "dist/act.bundle.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "tsc": "tsc",
    "test": "mocha --require esm test/rule.spec.js",
    "test:url": "mocha --require esm test/url.spec.js",
    "compile:rules": "node compile-rules.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prebuild": "npm run compile:rules && rimraf prebuild && tsc --build",
    "build": "npm run prebuild && rimraf dist && webpack --mode production && rimraf prebuild",
    "prepare": "npm run build"
  },
  "keywords": [
    "a11y",
    "act",
    "act-rules",
    "accessibility",
    "qualweb",
    "evaluator",
    "rule"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qualweb/act-rules.git"
  },
  "author": "Jo√£o Vicente",
  "license": "ISC",
  "devDependencies": {
    "@qualweb/dom": "^0.2.0",
    "@qualweb/qw-page": "^0.2.2",
    "@qualweb/types": "^0.5.6",
    "@tsconfig/recommended": "^1.0.1",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/node": "^14.14.37",
    "@types/string-pixel-width": "^1.7.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.3.4",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sonarjs": "^0.6.0",
    "esm": "^3.2.25",
    "mocha": "^8.3.2",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "puppeteer": "^8.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "@qualweb/util": "^0.4.0",
    "languagedetect": "^2.0.0",
    "lodash.clonedeep": "^4.5.0",
    "rematrix": "^0.7.1",
    "string-pixel-width": "^1.10.0"
  }
}
